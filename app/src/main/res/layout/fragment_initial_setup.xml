<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginBottom="10dp"
            android:src="@drawable/initial_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/infoAboutLockPin"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableEnd="@drawable/ic_info"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:text="Set Lock PIN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="numberPassword"
                    android:id="@+id/etLockPin"
                    android:layout_margin="1dp"
                    android:background="#fff"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_lock"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="10dp"
                    android:textSize="17sp"
                    android:hint="App Lock Pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:text="Confirm Lock PIN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="numberPassword"
                    android:id="@+id/etConfirmLockPin"
                    android:layout_margin="1dp"
                    android:background="#fff"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_lock"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="10dp"
                    android:textSize="17sp"
                    android:hint="Confirm App Lock PIN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/infoAboutDecryptionPassword"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableEnd="@drawable/ic_info"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:text="Set Decryption Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/etDecryptionPassword"
                    android:layout_margin="1dp"
                    android:background="#fff"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_decryption_key"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="10dp"
                    android:textSize="17sp"
                    android:hint="Decryption Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:text="Confirm Decryption Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/etConfirmDecryptionPassword"
                    android:layout_margin="1dp"
                    android:background="#fff"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_decryption_key"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="10dp"
                    android:textSize="17sp"
                    android:hint="Confirm Decryption Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/btnContinue"
            android:src="@drawable/ic_continue"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:layout_width="45dp"
            android:layout_height="45dp"/>

    </LinearLayout>

</ScrollView>

