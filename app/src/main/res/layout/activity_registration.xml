<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollbars="none"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="paul.cipherresfeber.passwordlocker.RegistrationActivity">

        <LinearLayout
            android:background="#fff"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/parentLinearLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:textSize="35sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:text="Welcome to Password Locker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:text="Hassle free management of Passwords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <ImageView
                android:src="@drawable/login"
                android:layout_width="wrap_content"
                android:layout_height="250dp" />

            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <TextView
                android:textStyle="bold"
                android:textSize="27sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:text="Sign Up Now!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:background="@color/colorPrimary"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:scrollHorizontally="true"
                    android:maxLines="1"
                    android:inputType="textPersonName"
                    android:id="@+id/etUserName"
                    android:layout_margin="1dp"
                    android:background="#fff"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_user_name"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="15dp"
                    android:textSize="17sp"
                    android:hint="Your Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="phone"
                    android:id="@+id/etUserPhoneNumber"
                    android:layout_margin="1dp"
                    android:background="#fff"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_phone_number"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="15dp"
                    android:textSize="17sp"
                    android:hint="Your Phone Number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/txvPrivacyPolicy"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="@string/privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:id="@+id/btnGetOtp"
                android:text="Send OTP"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:layout_width="150dp"
                android:layout_height="45dp" />

        </LinearLayout>

        <!-- layout for otp verification -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</ScrollView>