<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:text="Add New Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="start"
        android:text="Service Provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="text"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textSize="17sp"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_online_detail"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:id="@+id/etServiceProvider"
        android:hint="Website/App Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:text="Login Id/Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="text"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_login_details"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:id="@+id/etLoginId"
        android:hint="Login Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="start"
        android:id="@+id/txvLablePassword"
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/ic_info"
        android:layout_marginTop="20dp"
        android:text="Password of that account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_weight="1"
            android:inputType="textPassword"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_lock"
            android:background="#fff"
            android:id="@+id/etPassword"
            android:hint="Password"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imvShowPassword"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_show_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="2dp"
            android:background="#fff"
            android:padding="15dp"
            android:id="@+id/btnEncryptAndSave"
            android:text="Encrypt and Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>