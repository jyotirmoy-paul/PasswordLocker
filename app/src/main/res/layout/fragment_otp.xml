<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="10dp"
    android:gravity="center"
    android:background="#fff"
    android:orientation="vertical"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivityFragments.OtpFragment">

    <TextView
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        android:text="We're almost done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/authenticate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txvUserMessage"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="27sp"
        android:text="Verify your number, TestUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txvUserPhoneNumber"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:text="+91 825046987"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:inputType="number"
            android:id="@+id/etOTP"
            android:layout_margin="1dp"
            android:background="#fff"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/ic_otp"
            android:textColorHint="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:padding="15dp"
            android:textSize="17sp"
            android:hint="Enter OTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:textSize="17sp"
        android:id="@+id/btnVerifyOtp"
        android:text="verify"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:layout_width="150dp"
        android:layout_height="45dp" />

</LinearLayout>